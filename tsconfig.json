    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom", "WebWorker"],
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*"]
}
